{
  "name": "sge-grades-mvp",
  "version": "1.0.0",
  "description": "MVP MÃ³dulo de Calificaciones Offline para SGE",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run electron:dev\"",
    "backend": "cd backend && uvicorn app.main:app --reload --port 8000",
    "frontend": "cd frontend && npm start",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:frontend && npm run build:backend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && pyinstaller --onefile --name sge-backend app/main.py",
    "build:electron": "electron-builder",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && pytest",
    "test:frontend": "cd frontend && npm test"
  },
  "keywords": [
    "education",
    "grades",
    "offline",
    "electron"
  ],
  "author": "Equipo SGE",
  "license": "UNLICENSED",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0"
  },
  "build": {
    "appId": "com.sge.grades-mvp",
    "productName": "SGE Calificaciones",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist/sge-backend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
